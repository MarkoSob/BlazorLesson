@typeparam TItem

@if (ListOfItems == null)
{
    @if (NullList != null)
    {
        @NullList
    }
    else
    {
        <img src="https://cliply.co/wp-content/uploads/2019/02/371902170_FALLING_LOADER.gif" height="200" />
    }

}
else if (ListOfItems.Count == 0)
{
    @if (NullList != null)
        @EmptyList
}
else
{
    @foreach (var item in ListOfItems)
    {
       @ItemTemplate(item);
    }
}

@code {
    [Parameter]
    public RenderFragment NullList { get; set; }
    [Parameter]
    public RenderFragment EmptyList { get; set; }
    [Parameter]
    public RenderFragment<TItem> ItemTemplate { get; set; }
    [Parameter]
    public List<TItem> ListOfItems { get; set; }
}
